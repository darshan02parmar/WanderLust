<% layout('layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3 class="mb-3 text-center"><%= listing.title %></h3>
    <!-- Card -->
    <div class="card show-card listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing image"
        style="object-fit: contain; width: 100%;"
      />
      <div class="card-body">
        <p class="card-text">
           <!-- <b><%= listing.title %></b><br>  -->
        <p class="card-text"><i><b>Hosted by:</b> <%= listing.owner.username %></i></p>
        <p class="card-text"><b>Description: </b> <%= listing.description %></p>
        <p class="card-text"> <b>Cost: </b>&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
         <p class="card-text"><b>Location: </b><%= listing.location %></p>
        <p class="card-text"><b>Country: </b> <%= listing.country %></p>
        <p class="card-text"><b>Category: </b> <%= listing.category %></p>
        </p>
      </div>
    </div>
    <!-- Buttons -->
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="d-flex flex-column">
    <div class="btns mt-3 gap-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark flex-fill">
        Edit
      </a>

      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="flex-fill">
        <button type="submit" class="btn btn-danger w-100">
          Delete
        </button>
      </form>
    </div>
  </div>
<%}%>
