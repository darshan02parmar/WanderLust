    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
    
<div id="map-controls">
  <button id="locate-btn" type="button" class="btn btn-secondary btn-sm">Locate Me</button>
</div>
<h4>Where you'll be</h4>
<% if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates[0] && listing.geometry.coordinates[1]) { %>
  <div id="map"></div>
<% } else { %>
  <div class="alert alert-warning">Location not available for this listing.</div>
<% } %>
   

 <!-- Leaflet JS -->
 <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
 <script>
 const listingCoordinates = <%- JSON.stringify((listing?.geometry?.coordinates &&
  Array.isArray(listing.geometry.coordinates) &&
  listing.geometry.coordinates.length === 2) ?
  listing.geometry.coordinates : null)
%>;
 if (listingCoordinates && listingCoordinates[0] && listingCoordinates[1]) {
   const latitude = listingCoordinates[1];
   const longitude = listingCoordinates[0];
   const map = L.map('map', { scrollWheelZoom: false }).setView([latitude, longitude], 13);
   L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
     attribution: '&copy; OpenStreetMap contributors'
   }).addTo(map);
   // Marker with details popup
   const popupHTML = `<b><%= listing.title %></b><br><img src="<%= listing.image.url %>" alt="image" style="height:40px;width:60px;object-fit:cover;border-radius:4px;"/><br>Price: â‚¹<%= listing.price.toLocaleString('en-IN') %>`;
   L.marker([latitude, longitude])
    .addTo(map)
    .bindPopup(popupHTML)
    .openPopup();
   map.zoomControl.setPosition('bottomright');
   // Locate control
   document.getElementById('locate-btn').onclick = function() {
     map.locate({ setView: true, maxZoom: 15 });
   };
   map.on('locationerror', function() {
     alert('Could not determine your location.');
   });
 }
 </script>