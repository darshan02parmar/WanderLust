<% layout('layouts/boilerplate') %>
    
    <div class="row mt-3">
        <div class="col-6 offset-2">
     <h3>Edit Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" required class="form-control">
            <div class="invalid-feedback">please provide a title.</div>
            <div class="valid-feedback">Title looks good.!</div>
       </div>
       <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
            <div class="invalid-feedback">please provide a description.</div>
        </div>

        <div class="mb-3">
            Original Listing Image:<br>
            <img src="<%= originalImageUrl || listing.image.url %>" alt="" style="max-width: 150px; height:auto;">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input name="listing[image][url]" type="file" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
              <label for="latitude" class="form-label">Latitude</label>
              <input type="text" id="latitude" name="listing[geometry][coordinates][1]" value="<%= listing.geometry && listing.geometry.coordinates ? listing.geometry.coordinates[1] : '' %>" class="form-control" placeholder="Latitude">
            </div>
            <div class="mb-3 col-md-6">
              <label for="longitude" class="form-label">Longitude</label>
              <input type="text" id="longitude" name="listing[geometry][coordinates][0]" value="<%= listing.geometry && listing.geometry.coordinates ? listing.geometry.coordinates[0] : '' %>" class="form-control" placeholder="Longitude">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
             <label for="price" class="form-label">Price</label>
             <input type="number" name="listing[price]" value="<%= listing.price %>" required class="form-control">
             <div class="invalid-feedback">please provide a price.</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" required class="form-control">
            <div class="invalid-feedback">please provide a country.</div>
        </div>

        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" required class="form-control">
        </div>

        <div>
          <label for="category" class="form-label">Choose Category</label>
          <div class="category-choose"></div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="rooms" name="listing[category]" value="Rooms" <%= listing.category === 'Rooms' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="rooms">
                  <i class="fa-solid fa-bed me-2"></i> Rooms
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="iconic-cities" name="listing[category]" value="Iconic-Cities" <%= listing.category === 'Iconic-Cities' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="iconic-cities">
                  <i class="fa-solid fa-mountain-city me-2"></i> Iconic Cities
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="mountains" name="listing[category]" value="Mountains" <%= listing.category === 'Mountains' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="mountains">
                  <i class="fa-solid fa-mountain-sun me-2"></i> Mountains
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="castles" name="listing[category]" value="Castles" <%= listing.category === 'Castles' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="castles">
                  <i class="fa-brands fa-fort-awesome me-2"></i> Castles
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="boat" name="listing[category]" value="Boat" <%= listing.category === 'Boat' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="boat">
                  <i class="fa-solid fa-sailboat me-2"></i> Boat
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="ski-in-out" name="listing[category]" value="Ski-in-out" <%= listing.category === 'Ski-in-out' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="ski-in-out">
                  <i class="fa-solid fa-person-snowboarding me-2"></i> Ski-in/out
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="apartment" name="listing[category]" value="Apartment" <%= listing.category === 'Apartment' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="apartment">
                  <i class="fa-solid fa-building me-2"></i> Apartment
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="new" name="listing[category]" value="New" <%= listing.category === 'New' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="new">
                  <i class="fa-solid fa-key me-2"></i> New
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="woodlands" name="listing[category]" value="Woodlands" <%= listing.category === 'Woodlands' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="woodlands">
                  <i class="fa-solid fa-tree-city me-2"></i> Woodlands
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="lake" name="listing[category]" value="Lake" <%= listing.category === 'Lake' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="lake">
                  <i class="fa-solid fa-water me-2"></i> Lake
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="amazing-pools" name="listing[category]" value="Amazing-Pools" <%= listing.category === 'Amazing-Pools' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="amazing-pools">
                  <i class="fa-solid fa-person-swimming me-2"></i> Amazing Pools
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="cabins" name="listing[category]" value="Cabins" <%= listing.category === 'Cabins' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="cabins">
                  <i class="fa-solid fa-house me-2"></i> Cabins
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="camping" name="listing[category]" value="Camping" <%= listing.category === 'Camping' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="camping">
                  <i class="fa-solid fa-campground me-2"></i> Camping
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="farm" name="listing[category]" value="Farm" <%= listing.category === 'Farm' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="farm">
                  <i class="fa-solid fa-cow me-2"></i> Farm
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="arctic" name="listing[category]" value="Arctic" <%= listing.category === 'Arctic' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="arctic">
                  <i class="fa-solid fa-snowflake me-2"></i> Arctic
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="beach" name="listing[category]" value="Beach" <%= listing.category === 'Beach' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="beach">
                  <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="countryside" name="listing[category]" value="Countryside" <%= listing.category === 'Countryside' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="countryside">
                  <i class="fa-solid fa-house-chimney-window me-2"></i> Countryside
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="bed-and-breakfasts" name="listing[category]" value="Bed-and-Breakfasts" <%= listing.category === 'Bed-and-Breakfasts' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="bed-and-breakfasts">
                  <i class="fa-solid fa-mug-hot me-2"></i> Bed & Breakfasts
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="campsite" name="listing[category]" value="Campsite" <%= listing.category === 'Campsite' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="campsite">
                  <i class="fa-solid fa-tents me-2"></i> Campsite
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" id="historical-homes" name="listing[category]" value="Historical-Homes" <%= listing.category === 'Historical-Homes' ? 'checked' : '' %> required>
                <label class="form-check-label d-flex align-items-center" for="historical-homes">
                  <i class="fa-solid fa-landmark me-2"></i> Historical Homes
                </label>
              </div>
            </div>
          </div>
          <div class="invalid-feedback">Choose Category</div>
        </div>

        <button  type="submit" class="btn-dark add-btn edit-btn mt-3">Update Listing</button><br>
    </form>
</div>
</div>